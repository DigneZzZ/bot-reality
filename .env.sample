# Основные настройки бота
BOT_TOKEN=your-telegram-bot-token
ADMIN_ID=your-telegram-user-id

# Redis (для Docker эти параметры будут переопределены в docker-compose.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Имя пользователя бота для deep links (без @, например: my_domain_bot)
BOT_USERNAME=your_bot_username

# Функции и возможности
SAVE_APPROVED_DOMAINS=false
GROUP_MODE_ENABLED=true
GROUP_COMMAND_PREFIX=!
AUTHORIZED_GROUPS=
AUTO_LEAVE_UNAUTHORIZED=false

# Автоочистка сообщений в группах
AUTO_DELETE_GROUP_MESSAGES=true
AUTO_DELETE_TIMEOUT=300  # 5 минут в секундах

# Лимиты для групповых чатов (на пользователя в каждой группе)
GROUP_RATE_LIMIT_MINUTES=5  # Минут между запросами в группе
GROUP_DAILY_LIMIT=50        # Максимум запросов в день на пользователя в группе

# Лимиты для приватных чатов
PRIVATE_RATE_LIMIT_PER_MINUTE=10  # Запросов в минуту
PRIVATE_DAILY_LIMIT=100           # Максимум запросов в день
