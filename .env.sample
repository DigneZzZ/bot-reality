BOT_TOKEN=your-telegram-bot-token
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
ADMIN_ID=your-telegram-user-id
# Включить сохранение пригодных доменов (true/false, по умолчанию false)
SAVE_APPROVED_DOMAINS=false
# Включить работу в группах (true/false, по умолчанию true)
GROUP_MODE_ENABLED=true
# Префикс для команд в группах (по умолчанию !)
GROUP_COMMAND_PREFIX=!
# Авторизованные группы (ID групп через запятую, пустая строка = любые группы)
AUTHORIZED_GROUPS=
# Автоматически покидать неавторизованные группы (true/false, по умолчанию false)
AUTO_LEAVE_UNAUTHORIZED=false
# Имя пользователя бота для deep links (без @, например: my_domain_bot)
BOT_USERNAME=your_bot_username

# Автоочистка сообщений в группах
AUTO_DELETE_GROUP_MESSAGES=true
AUTO_DELETE_TIMEOUT=300  # 5 минут в секундах
